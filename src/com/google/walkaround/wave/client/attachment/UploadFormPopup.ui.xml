<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    >
  <ui:with field='css' type='com.google.walkaround.wave.client.attachment.Resources.Css'/>
  <g:FormPanel styleName='{css.form}' method='post' encoding='multipart/form-data'>
  <g:HTMLPanel>
    <div class='{css.row}'>
      Select a file for upload.
    </div>
    <div class='{css.row}'>
      <g:FileUpload ui:field='file' name='attachment'/>
    </div>
    <div class='{css.row}'>
      <div style='float: right'>
        <g:SubmitButton ui:field='submit' enabled='false'>OK</g:SubmitButton>
        <g:Button ui:field='cancel'>Cancel</g:Button>
      </div>
    </div>
  </g:HTMLPanel>
  </g:FormPanel>
</ui:UiBinder>
