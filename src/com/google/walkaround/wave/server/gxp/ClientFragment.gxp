<!DOCTYPE gxp:template SYSTEM
  'http://gxp.googlecode.com/svn/trunk/resources/xhtml.ent'>
<gxp:template name='com.google.walkaround.wave.server.gxp.ClientFragment'
  xmlns='http://www.w3.org/1999/xhtml'
  xmlns:expr='http://google.com/2001/gxp/expressions'
  xmlns:gxp='http://google.com/2001/gxp'
  xmlns:nomsg='http://google.com/2001/gxp/nomsg'>
 
  <gxp:param name='announcementHtml' type='HtmlClosure'/>
 
  <gxp:if cond='announcementHtml != null'>
    <div id='announcement'><gxp:eval expr='announcementHtml'/></div>
    <p/>
  </gxp:if>
  
  <style type='text/css'>
      #left-pane, #right-pane {
        position: absolute;
        top: 50px;
        bottom: 10px;
      }
      
      #left-pane iframe, #right-pane iframe{
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        border: none;
        width: 100%;
        height: 95%;
      }

      #left-pane {
        left: 20px;
        right: 55%;
      }
      
      #right-pane {
        left: 47%;
        right: 15px;
      }
  </style>
 
  <div id='left-pane'>
    <iframe src='/inbox?embedded=true'/>
  </div>
  <div id='right-pane'>
    <iframe name='wave' style='background:#D8D8D8'/>
  </div>
</gxp:template>
